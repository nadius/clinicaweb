@model List<ClinicaWEB.Models.Roles>

@{
    ViewBag.Title = "Alta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Seleccione un nuevo rol</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <td>Nombre</td>
            <td>Funcionalidades</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (Model.Count == 0)
            {
            <tr><td colspan="3"><center>Lista vacia.</center></td></tr>
            }
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>
                    @foreach (var registro in item.Funcionalidades)
                    {
                        @Html.DisplayFor(registroItem => registro.Descripcion)
                        <br />
                    }
                </td>
                <td>
                    <form action="/Rol/Alta" method="post">
                        <input type="hidden" id="IdRol" name="IdRol" value="@item.IdRol" />
                        <input type="hidden" id="Nombre" name="IdRol" value="@item.Nombre" />
                        @*@Html.HiddenFor(modelItem => item.IdRol)
                        @Html.HiddenFor(modelItem => item.Nombre)*@
                        <input type="submit" value="Agregar" />
                    </form>
                </td>
            </tr>
        }
     
    </tbody>
</table>

